<Window x:Class="ProductPractic4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductPractic4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="People" Grid.Row="0" Content="Работники" VerticalAlignment="Center" Click="People_Click" Height="100"/>
        <Button x:Name="WorkInfo" Grid.Row="1" Content="Отчеты" VerticalAlignment="Center" Click="WorkInfo_Click"  Height="100"/>
        <Button x:Name="WorkReport" Grid.Row="2" Content="Отчеты работников" VerticalAlignment="Center" Click="WorkReport_Click"  Height="100"/>
    </Grid>
</Window>
